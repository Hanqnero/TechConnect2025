{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run FastAPI (uvicorn)",
			"type": "shell",
			"command": ".venv\\Scripts\\python.exe -m uvicorn app.app:app --reload --port 8000",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Run Frontend (Vite)",
			"type": "shell",
			"command": "npm run dev",
			"options": { "cwd": "${workspaceFolder}\\frontend" },
			"isBackground": true,
			"group": "build"
		}
	]
}